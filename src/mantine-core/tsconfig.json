{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "./demos", "../../configuration/types", "../../tests"],
  "exclude": ["./lib", "./esm", "./cjs", "**/*.story.tsx"],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@mantine/hooks": ["../mantine-hooks/src"],
      "@mantine/styles": ["../mantine-styles/src"],
      "@mantine/tests": ["../mantine-tests/src"],
      "@mantine/mockdata": ["../mantine-mockdata/src"]
    }
  },
  "references": [
    { "path": "../mantine-hooks" },
    { "path": "../mantine-styles" },
    { "path": "../mantine-tests" },
    { "path": "../mantine-mockdata" }
  ]
}
