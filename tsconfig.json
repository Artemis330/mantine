{
  "plugins": [],
  "include": ["./"],
  "exclude": ["dist", "public"],

  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "noEmitOnError": true,
    "allowJs": true,
    "types": ["node", "webpack", "jest"],
    "typeRoots": ["./node_modules/@types", "./configuration/types"],
    "baseUrl": ".",
    "paths": {
      "@mantine/*": ["src/mantine-*/src"]
    }
  }
}
